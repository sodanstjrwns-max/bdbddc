# Cloudflare Pages Headers - 캐싱 및 보안 최적화 (Lighthouse 최적화)

/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://www.gstatic.com https://www.googletagmanager.com https://www.google-analytics.com https://cdn.amplitude.com https://www.youtube.com https://s.ytimg.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com; font-src 'self' https://cdn.jsdelivr.net https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; frame-src 'self' https://www.youtube.com https://www.google.com https://pf.kakao.com; connect-src 'self' https://www.google-analytics.com https://api.amplitude.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://proxy.inblog.dev https://www.googleapis.com; media-src 'self' https://www.youtube.com; object-src 'none'; base-uri 'self'; form-action 'self' https://pf.kakao.com
  X-Permitted-Cross-Domain-Policies: none
  Cross-Origin-Opener-Policy: same-origin-allow-popups
  Cross-Origin-Embedder-Policy: unsafe-none
  Cross-Origin-Resource-Policy: cross-origin

# HTML - 짧은 캐싱 (항상 최신 버전)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate
  
/
  Cache-Control: public, max-age=3600, must-revalidate

# CSS/JS - 긴 캐싱 (버전 쿼리스트링 사용)
/css/*
  Cache-Control: public, max-age=31536000, immutable

/js/*
  Cache-Control: public, max-age=31536000, immutable

# 이미지 - 긴 캐싱
/images/*
  Cache-Control: public, max-age=31536000, immutable

# 폰트 - 긴 캐싱
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# JSON/XML - 중간 캐싱
/*.json
  Cache-Control: public, max-age=86400
  
/*.xml
  Cache-Control: public, max-age=86400

# LLMs.txt - AI 검색 최적화
/llms.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain; charset=utf-8

/llms-full.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain; charset=utf-8

# 의료진 페이지 - 중간 캐싱
/doctors/*
  Cache-Control: public, max-age=7200, stale-while-revalidate=86400

# 진료 안내 페이지 - 중간 캐싱
/treatments/*
  Cache-Control: public, max-age=7200, stale-while-revalidate=86400
